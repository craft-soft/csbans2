{{ use('yii/widgets/DetailView') }}
{{ use('yii/grid/GridView') }}
<div class="webadmin-view">
    <div class="d-flex justify-content-between flex-wrap mb-3">
        <h2 class="mb-0">{{ t('admin/webadmins', 'VIEW_TITLE', {username: model.username}) }}</h2>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="{{ path('update', {id: model.id}) }}" class="btn btn-primary">{{ t('admin/webadmins', 'VIEW_UPDATE_LINK') }}</a>
            <a
              href="{{ path('delete', {id: model.id}) }}"
              data-confirm="{{ t('admin/webadmins', 'VIEW_DELETE_LINK_CONFIRM') }}"
              data-method="post"
              class="btn btn-danger">{{ t('admin/webadmins', 'VIEW_DELETE_LINK') }}</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ t('admin/webadmins', 'VIEW_GENERAL_CARD_TITLE') }}</h3>
                </div>
                <div class="card-body">
                    {{ detail_view_widget({
                        model: model,
                        attributes: [
                            'id',
                            'username',
                            'email:email',
                            'last_action:datetime',
                            'try',
                        ],
                    }) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ t('admin/webadmins', 'VIEW_PERMISSIONS_CARD_TITLE') }}</h3>
                </div>
                <div class="card-body">
                    <ul>
                        {% for permission in permissions %}
                        <li>{{ permission }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% if authsDataProvider %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{ t('admin/webadmins', 'VIEW_AUTHS_CARD_TITLE') }}</h3>
        </div>
        <div class="card-body">
            {{ pjax_begin() }}
            {{ grid_view_widget({
                dataProvider: authsDataProvider,
                rowOptions: authGridRowOptions,
                columns: [
                    'date:datetime',
                    'ip:ipModal',
                    'device:html',
                    'location',
                ]
            }) }}
            {{ pjax_end() }}
        </div>
    </div>
    {% endif %}
</div>