{{ use('yii/grid/GridView') }}
<div class="amxadmins-index">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h3 class="card-title">{{ t('admin/amxAdmins', 'INDEX_TITLE') }}</h3>
                <div class="card-tools ms-auto">
                    <a href="{{ path(['create']) }}" class="btn btn-tool text-success">
                        {{ t('admin/amxAdmins', 'INDEX_LINK_ADD') }}
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{ pjax_begin() }}
            {{ grid_view_widget({
                dataProvider: dataProvider,
                filterModel: searchModel,
                columns: [
                    {
                        attribute: 'id',
                        options: {
                            style: 'width: 60px'
                        },
                    },
                    'nickname',
                    'steamid',
                    'access',
                    {
                        attribute: 'flags',
                        value: 'viewAccountType'
                    },
                    {
                        class: "\\app\\modules\\admin\\components\\grid\\ActionColumn",
                    }
                ]
            }) }}
            {{ pjax_end() }}
        </div>
    </div>
</div>